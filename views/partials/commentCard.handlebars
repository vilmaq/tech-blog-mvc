
<div class="card-body">
  <h6 class="card-subtitle mb-2 text-muted">By {{user.username}}</h6>
  <hr />
  <p class="card-text">{{message}}</p>
  <div class="mt-3">
    <p class="text-muted"><small>Created: {{formatDateTime createdAt}}</small></p>
    <p class="text-muted"><small>Updated: {{formatDateTime updatedAt}}</small></p>
  </div>
  {{#if myComment}}
    <div>
      <button class="btn btn-danger" id="{{id}}" name="delete-comment-btn">Delete</button>
    </div>
  {{/if}}
</div>